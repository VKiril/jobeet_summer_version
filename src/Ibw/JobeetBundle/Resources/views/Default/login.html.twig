{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

<form action="{{ path('login_check') }}" method="post" >

    <div style="width: 40%; height: 70px; background: #bce3fd; border: 1px solid #000000; border-radius: 3px;padding: 40px;  margin: 25%;">
        <div>
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
            &nbsp;&nbsp;&nbsp;
            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" />
        </div>

        <div>
            <button type="submit" style="  margin-left: 45%; width: 10%; margin-top: 10px; background-color: #468afd; border: 1px solid #0000BB; color: #f5f5f5; border-radius: 2px; ">login</button>
        </div>
    </div>

</form>